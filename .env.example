LLM_MODEL=deepseek-chat

# NapCat HTTP (for reminders delivery)
NAPCAT_HTTP_URL=http://127.0.0.1:3000
NAPCAT_HTTP_TOKEN=

# Reminders timezone (IANA name, e.g. Asia/Shanghai)
REMINDER_TIMEZONE=Asia/Shanghai

# Default timezone for time/date tools (IANA name)
TIMEZONE=Asia/Shanghai

# Image understanding (OpenAI-compatible chat/completions)
VLM_UNDERSTAND_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1
VLM_UNDERSTAND_API_KEY=
VLM_UNDERSTAND_MODEL=qwen3-vl-plus
# Optional: max output tokens for image understanding
VLM_UNDERSTAND_MAX_TOKENS=2048

# File saving (optional)
# If not set, defaults to ./data/files (with typed subdirs: images/videos/audio/text/files/others)
FILE_SAVE_DIR=

# Image generation (optional)
# Ark/OpenAI-compatible images.generate
IMAGE_GENERATE_BASE_URL=
IMAGE_GENERATE_API_KEY=
IMAGE_GENERATE_MODEL=doubao-seedream-4-5-251128
IMAGE_GENERATE_SIZE=2K
IMAGE_GENERATE_N=1
IMAGE_GENERATE_WATERMARK=true
IMAGE_GENERATE_SAVE_DIR=

# Tool quotas (optional)
# Config file path (default: ./tool_limits.json). If missing or empty, no limits.
MCP_LIMITS_FILE=
# Usage counter file path (default: ./data/tool_usage.json)
MCP_TOOL_USAGE_FILE=

# Bot power control (optional)
# Comma-separated QQ IDs, e.g. 123456,789012
BOT_ADMIN_QQ_IDS=
# Optional: limit to specific group IDs (comma-separated). If empty, allows all groups.
BOT_POWER_GROUP_IDS=
# Optional: override state file path. Default: ./data/power_state.json
BOT_POWER_STATE_FILE=

# Web search (optional)
SEARCH_API_HOST=api.search1api.com
SEARCH_API_KEY=
SERPER_API_KEY=

# Seniverse weather (optional)
SENIVERSE_PUBLIC_KEY=
SENIVERSE_PRIVATE_KEY=
SENIVERSE_API_HOST=api.seniverse.com
